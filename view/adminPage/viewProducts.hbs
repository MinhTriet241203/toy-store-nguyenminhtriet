{{>headerAdmin}}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title" style="font-size: 30px; font-weight: bold;">Products List</h4>
                        <form class="ml-auto search-form d-none d-md-block" style="width: 300px;" action="#">
                            <div class="form-group">
                                <input type="search" class="form-control" placeholder="Search for products">
                            </div>
                        </form>
                        <p>
                        <div style="width: 100%; height: 30px;">
                            <button type="button" class="btn btn-primary" style="position: absolute; right: 16px">
                                <a href="/newProduct" style="text-decoration: none; color: inherit;">Add more toy</a>
                            </button>
                        </div>
                        </p>

                        <table class="table table-hover" style="text-align: center;">
                            <thead style="background-color: #264653;">
                                <tr>
                                    <th style="color: #f1faee; font-weight: bold">Product Name</th>
                                    <th style="color: #f1faee; font-weight: bold">Category</th>
                                    <th style="color: #f1faee; font-weight: bold">Description</th>
                                    <th style="color: #f1faee; font-weight: bold">Price</th>
                                    <th style="color: #f1faee; font-weight: bold">Image</th>
                                    <th style="color: #f1faee; font-weight: bold">Configurations</th>
                                    <th style="width: 100px!important; color: #f1faee">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td>{{this.product_name}}</td>
                                    <td>{{this.category.category_name}}</td>
                                    <td>{{this.description}}</td>
                                    <td>{{this.price}}</td>
                                    <td><img src="img/products/{{this.image}}" alt="Image for {{this.product_name}}" style="width:200px !important; height:200px !important; border-radius: 5% !important;" >
                                    </td>
                                    <td>
                                        {{#each this.configurations}}
                                        Color: {{this.color}}
                                        Stock: {{this.stock}}
                                        <br>
                                        {{/each}}
                                    </td>
                                    <td>
                                        <a href="/productEdit{{this._id}}" class="btn btn-info">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/productDelete/{{this._id}}" class="btn btn-danger"
                                            onclick="return confirm('Are you sure you want to delete this toy?')">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- container-scroller -->
<!-- plugins:js -->
<script src="../../assets/vendors/js/vendor.bundle.base.js"></script>
<script src="../../assets/vendors/js/vendor.bundle.addons.js"></script>
<!-- endinject -->
<!-- Plugin js for this page-->
